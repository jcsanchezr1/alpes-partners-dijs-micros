		{
			"name": "Crear Influencer - Exitoso",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Generar un número aleatorio",
							"let randomNum = Math.floor(Math.random() * 100000);",
							"",
							"// Nombres base",
							"let firstNames = [\"María\", \"Laura\", \"Carlos\", \"Andrés\", \"Sofía\", \"Pedro\", \"Camila\", \"Juan\"];",
							"let lastNames = [\"García\", \"López\", \"Martínez\", \"Rodríguez\", \"Pérez\", \"Sánchez\", \"Torres\", \"Ramírez\"];",
							"",
							"// Elegir aleatoriamente nombre y apellido",
							"let firstName = firstNames[Math.floor(Math.random() * firstNames.length)];",
							"let lastName = lastNames[Math.floor(Math.random() * lastNames.length)];",
							"",
							"// Crear nombre completo",
							"let fullName = `${firstName} ${lastName}`;",
							"",
							"// Crear email único",
							"let email = `${firstName.toLowerCase()}.${lastName.toLowerCase()}${randomNum}@example.com`;",
							"",
							"// Guardar variables en el entorno de Postman",
							"pm.environment.set(\"nombre\", fullName);",
							"pm.environment.set(\"email\", email);",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"id_influencer\": \"inf-002\",\n  \"nombre\": \"{{nombre}}\",\n  \"email\": \"{{email}}\",\n  \"categorias\": [\"lifestyle\", \"moda\", \"belleza\"],\n  \"plataformas\": [\"instagram\", \"youtube\", \"tiktok\"],\n  \"descripcion\": \"Influencer de lifestyle y moda\",\n  \"biografia\": \"Apasionada por la moda y el estilo de vida saludable\",\n  \"sitio_web\": \"https://mariagarcia.com\",\n  \"telefono\": \"+1234567890\"\n}"
